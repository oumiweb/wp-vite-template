{
  "name": "wp-template",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "license": "SEE LICENSE IN LICENSE",
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "@wordpress/env": "^10.37.0",
    "autoprefixer": "^10.4.19",
    "kiso.css": "^1.1.4",
    "postcss": "^8.4.45",
    "sharp": "^0.33.4",
    "vite-plugin-image-optimizer": "^1.1.8"
  },
  "scripts": {
    "dev": "concurrently \"yarn watch:scss\" \"vite\"",
    "watch:scss": "node bin/watch-scss-globs.js",
    "build:wp": "vite build --mode wp && node bin/clean-dev-files.js",
    "wp-start": "node bin/update-wp-config.js --wp-env && wp-env start",
    "wp-stop": "wp-env stop",
    "wp-init": "node bin/init-wp-options.js",
    "wp-post:create": "node bin/create-post.js",
    "wp-contents:export": "wp-env run cli wp db export /var/www/html/wp-content/uploads/backup.sql",
    "wp-contents:import": "wp-env run cli wp db reset --yes && wp-env run cli wp db import /var/www/html/wp-content/uploads/backup.sql",
    "update:wp-config": "node bin/update-wp-config.js",
    "format": "yarn _lint-fix && yarn _prettier-fix",
    "format:check": "yarn _lint && yarn _prettier",
    "validate:acf": "node bin/validate-acf-json.js",
    "_lint": "eslint --ext .js --ignore-path .gitignore . && stylelint \"**/*.{scss,css}\"",
    "_prettier": "prettier --check \"**/*.{html,scss,js,php}\" --ignore-path .prettierignore",
    "_lint-fix": "eslint --fix --ext .js --ignore-path .gitignore . && stylelint --fix \"**/*.{scss,css}\"",
    "_prettier-fix": "prettier --write \"**/*.{html,scss,js,php}\" --ignore-path .prettierignore"
  },
  "devDependencies": {
    "@prettier/plugin-php": "^0.23.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "glob": "10.3.10",
    "prettier": "3.2.4",
    "sass": "1.70.0",
    "stylelint": "16.2.0",
    "stylelint-config-standard-scss": "13.0.0",
    "stylelint-order": "6.0.4",
    "taks-stylelint-order": "^1.1.3",
    "vite": "5.0.13",
    "vite-plugin-dev-manifest": "^1.4.1",
    "vite-plugin-live-reload": "^3.0.5",
    "vite-plugin-sass-glob-import": "^5.0.0"
  }
}
